# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.less text eol=lf
*.svg text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bat text eol=lf
*.cmd text eol=lf

# Force CRLF line endings for Windows-specific files
*.ps1 text eol=crlf

