{
  "name": "mern-monorepo",
  "private": true,
  "packageManager": "pnpm@10.18.1",
  "engines": {
    "node": ">=20.11.0",
    "pnpm": ">=10.18.1"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:integration": "turbo run test:integration",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install",
    "changeset": "changeset",
    "init-latest": "bash scripts/init-latest.sh aggressive",
    "init-latest:conservative": "bash scripts/init-latest.sh conservative",
    "ai:new-feature": "bash scripts/ai-dev-helper.sh new-feature",
    "ai:check-setup": "bash scripts/ai-dev-helper.sh check-setup",
    "ai:check-health": "bash scripts/ai-dev-helper.sh check-health",
    "ai:deploy-ready": "bash scripts/ai-dev-helper.sh deploy-ready",
    "ai:clean": "bash scripts/ai-dev-helper.sh clean",
    "workflow:ai": "bash scripts/dev-workflow.sh ai-workflow",
    "workflow:user": "bash scripts/dev-workflow.sh user-workflow",
    "workflow:qa": "bash scripts/dev-workflow.sh qa-workflow",
    "workflow:deploy": "bash scripts/dev-workflow.sh deploy-workflow"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/cors": "^2.8.19",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  }
}
